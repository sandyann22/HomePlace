{% extends 'base.html.twig' %}

{% block body %}

    <h1> Inscription sur HomePlace Collaboration !</h1>

    {{ form_start(form) }}

    {{ form_row(form.username, {'label':'Pseudonyme', 'attr':{'placeholder': 'Pseudo'}}) }}
    {{ form_row(form.name,{'label':'Nom', 'attr':{'placeholder': 'Nom'}}) }}
    {{ form_row(form.firstname,{'label':'Prénom', 'attr':{'placeholder': 'Prénom'}}) }}
    {{ form_row(form.phone,{'label':'Téléphone', 'attr':{'placeholder': 'numéro'}}) }}
    {{ form_row(form.email, {'label':'Adresse email', 'attr':{'placeholder': 'votreadresse@email.fr'}}) }}
    {{ form_row(form.password, {'label':'Votre mot de passe', 'attr':{'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label':'Confirmation de mot de passe', 'attr':{'placeholder': 'Mot de passe'}})}}
    {{ form_row(form.roles, {'label':'Loueur ou hebergeur', 'attr':{'placeholder': 'Loueur ou hebergeur '}}) }}

    <button type="submit" class="btn btm-success">Inscription</button>

    {{ form_end(form) }}

{%  endblock %}